@model CreateProductDTO
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
                <form method="post">
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="Disrict" class="form-control" />
                    <br />
                    <label>Kategori</label>
                    <select asp-for="ProductCategory" asp-items="ViewBag.v" class="form-control" style="background-color:black;"></select>
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <br />
                    <label>Tür</label>
                    <input type="text" asp-for="Type" class="form-control" />
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="CoverImage" class="form-control" />
                    <br />
                    <label>İlan Açık Adresi</label>
                    <textarea rows="5" class="form-control" asp-for="Address"></textarea>
                    <br />
                    <button class="btn btn-light m-2">İlanı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

