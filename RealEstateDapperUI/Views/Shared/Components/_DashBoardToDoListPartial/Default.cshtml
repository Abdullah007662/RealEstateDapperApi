@model List<ResultToDoListDTO>
<div class="col-sm-12 col-md-6 col-xl-4">
    <div class="h-100 bg-secondary rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Yapılacaklar Listesi</h6>
            <a href="">Tümünü Gör</a>
        </div>
        <div class="d-flex mb-2">
            <input class="form-control bg-dark border-0" type="text" placeholder="Enter task">
            <button type="button" class="btn btn-primary ms-2">Ekle</button>
        </div>
        @foreach (var item in Model)
        {
                <div class="d-flex align-items-center border-bottom py-2">
                    <input class="form-check-input m-0 task-checkbox" type="checkbox" data-id="@item.ToDoListID" @(item.ToDoListStatus ? "checked" : "")>
                    <div class="w-100 ms-3">
                        <div class="d-flex w-100 align-items-center justify-content-between">
                            <span class="task-text @(item.ToDoListStatus ? "text-decoration-line-through" : "")">@item.Description</span>
                            <button class="btn btn-sm text-primary"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
