@model List<ResultWhoWeAreDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama 1</th>
                                <th scope="col">Açıklama 2</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">@item.WhoWeAreDetailID</td>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAre/@item.WhoWeAreDetailID" class="btn btn-outline-danger m-2">Sil</a></td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAre/@item.WhoWeAreDetailID" class="btn btn-outline-success m-2">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAre/" class="btn btn-outline-info m-2">Yeni Biz Kimiz Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

